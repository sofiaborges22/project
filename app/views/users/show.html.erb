<div class="container">
	<div class="row profile-title" style="margin:none;">
		<div class="col-sm-12">
			<h1><%= @name %>'s Profile</h1>
		</div>

		<div class="col-sm-6">
			<h4 style="display: inline-block; float: left;">
				With what business problem may we assist you with?
					<button type="button" class="btn btn-primary" style="margin-top:30px; background-color: #5bdb99; border:none;" data-toggle="modal" data-target="#problemModal">
	                    Add a business problem
	                </button>
	                <%= render 'users/problem_modal' %> 
			</h4>
		</div>
	</div>

	<hr>

	<div class="row category-list">
		<div class="col-sm-12">
			<h4>Click on the categories below to see your business problems:</h4>

			<nav class="col-sm-12" style="display:inline-block;">
	              <button class="btn btn-primary decision-tree-btn categories" style="margin:45px;">Decision Tree Tool</button>
	              <button class="btn btn-primary break-even-btn categories" style="margin:45px;">Break Even Analysis</button>
	              <button class="btn btn-primary crossover-btn categories" style="margin:45px;">Crossover Analysis</button>
	        </nav>
		</div>

		<div id="problems" class="col-sm-6" style='border-radius: 25px; border:2px #5bdb99 solid; margin:10px; width:fit-content; width:-webkit-fit-content; width:-moz-fit-content; padding: 10px; display:inline-block;'>
		</div>
	</div>
</div>
