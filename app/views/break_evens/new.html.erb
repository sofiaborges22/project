<div class="container">
  <div class="row problem-title">
    <div class="col-sm-12">
      <h2 style='margin: 0 auto; border-radius: 25px; border:2px black solid; font-size:26px; width:fit-content; width:-webkit-fit-content; width:-moz-fit-content; padding: 20px;'><%= @problem.title %></h2>
      <h3>Fill out this form to create a decision option</h3><br>
    </div>
  </div>

  <div class="row info">
    <%= form_for @new_break_even, url:user_problem_break_evens_path(@user, @problem, @break_even) do |f|%>
      <div class="col-sm-8"> 
        <div class="form-horizontal" style="margin-bottom: 50px;">
          <div class="form-group">
            <%= f.label(:fixed_costs, "Fixed costs *", class: "col-sm-3 control-label") %>
            <div class="col-sm-8">
                <%= f.number_field :fixed_costs, placeholder:"What are the fixed costs?", class: "form-control"  %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label(:selling_price, "Selling price *", class: "col-sm-3 control-label") %>
            <div class="col-sm-8">
                <%= f.number_field :selling_price, placeholder:"How much are you selling each item for?", class: "form-control"  %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label(:variable_cost, "Variable Cost *", class: "col-sm-3 control-label") %>
            <div class="col-sm-8">
                <%= f.number_field :variable_cost, placeholder:"How much does it cost to create each individual item?", class: "form-control"  %>
            </div>
          </div>  
        </div>
      </div>

      <div class="col-sm-4">
        <%= f.submit "Result", :class => "btn btn-success btn-circle btn-lg" %>
      </div>
      
    <%end%>
  </div>


</div>
